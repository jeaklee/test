{
  "name": "demo-static",
  "version": "1.0.0",
  "description": "Sample static website using ExpressJS and Webpack.",
  "keywords": [
    "demo",
    "static"
  ],
  "homepage": "https://github.com/AdrianGhita/demo-static",
  "bugs": {
    "url": "https://github.com/AdrianGhita/demo-static/issues",
    "email": "adi.ghita202@gmail.com"
  },
  "main": "src/server/app.iced",
  "scripts": {
    "start": "pm2 start conf/pm2.config.js",
    "stop": "pm2 delete conf/pm2.config.js",
    "prestart:dev": "hostile set localhost www.static-site.dev && cross-env NODE_ENV=development webpack --config conf/webpack.config.js",
    "start:dev": "cross-env NODE_ENV=development pm2 start conf/pm2.config.js",
    "stop:dev": "cross-env NODE_ENV=development pm2 delete conf/pm2.config.js",
    "poststop:dev": "hostile remove www.static-site.dev && pm2 flush",
    "pretest": "cross-env NODE_ENV=test webpack --config conf/webpack.config.js",
    "test": "mocha dist/test",
    "posttest": "shx rm -rf dist/test",
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack --config conf/webpack.config.js",
    "profiler": "pm2 monit",
    "profiler:inline": "pm2 list && pm2 logs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdrianGhita/demo-static.git"
  },
  "author": {
    "name": "Adrian Ghita",
    "email": "adi.ghita202@gmail.com",
    "url": "https://github.com/AdrianGhita/"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "express": "^4.14.1",
    "loglevel": "^1.4.1",
    "pm2": "^2.4.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "extract-loader": "^0.1.0",
    "file-loader": "^0.10.1",
    "hostile": "^1.2.0",
    "iced-coffee-loader": "^0.7.3",
    "iced-coffee-script": "^108.0.11",
    "image-webpack-loader": "^3.2.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "pug": "^2.0.0-beta11",
    "pug-loader": "^2.3.0",
    "resolve-url-loader": "^2.0.0",
    "sass-loader": "^6.0.2",
    "shx": "^0.2.2",
    "sinon": "^1.17.7",
    "source-map-support": "^0.4.11",
    "supertest": "^3.0.0",
    "susy": "^2.2.12",
    "svg-url-loader": "^2.0.2",
    "webpack": "^2.2.1",
    "webpack-auto-clean-build-plugin": "^1.0.3",
    "webpack-node-externals": "^1.5.4"
  }
}
